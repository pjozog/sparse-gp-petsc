\ProvidesPackage{perl_SIunits}
\usepackage[amssymb,cdot]{SIunits}

% SI units
%=====================================================
% distance
\providecommand{\km}{\kilo\meter}  % km
\providecommand{\m}{\meter}        % m
\providecommand{\cm}{\centi\meter} % cm
\providecommand{\mm}{\milli\meter} % mm

% speed
\providecommand{\mmps}{\milli\meter\per\second}% mm/s
\providecommand{\cmps}{\centi\meter\per\second}% cm/s
\providecommand{\mps}{\meter\per\second}       % m/s
\providecommand{\kmps}{\kilo\meter\per\second} % km/s
\providecommand{\kmps}{\kilo\meter\per\hour}   % km/h

% time
\providecommand{\h}{\hour}         % hr
\providecommand{\s}{\second}       % s
\providecommand{\ms}{\milli\second}% ms
\providecommand{\us}{\micro\second}% us
\providecommand{\ns}{\nano\second} % ns

% frequency
\providecommand{\GHz}{\giga\hertz} % GHz
\providecommand{\MHz}{\mega\hertz} % MHz
\providecommand{\kHz}{\kilo\hertz} % kHz
\providecommand{\Hz}{\hertz}       % Hz

% mass
\providecommand{\kg}{\kilo\gram}   % kg

% energy
\providecommand{\Whr}{\watt{hr}}       % W*hr

% power
\providecommand{\kWh}{\kilo\watt\hour} % kWh
\providecommand{\W}{\watt}             % W
\providecommand{\mW}{\milli\watt}      % mW

% voltage
\providecommand{\Vdc}{\volt~dc} % Vdc
\providecommand{\mVdc}{\milli\volt~dc} % mVdc
\providecommand{\uVdc}{\micro\volt~dc} % uVdc

% current
\providecommand{\A}{\ampere}        % A
\providecommand{\mA}{\milli\ampere} % mA
\providecommand{\uA}{\micro\ampere} % uA

% Bytes/bits
\providecommand{\MB}{\mega B}     % MB
\providecommand{\kbps}{\kilo bps} % kbps
\providecommand{\kbps}{bps}       % bps


% temperature
\providecommand{\C}{\celsius} % C
